<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v7.widget.Toolbar
            android:id="@+id/secondTabToolbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <ImageButton
            android:id="@+id/buttonEdit"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="40dp"
            android:background="#ffffff"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/edit3" />

        <ImageButton
            android:id="@+id/buttonDelete"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:background="#ffffff"
            android:src="@drawable/delete_rubbish" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/secondView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="title" />

        <EditText
            android:id="@+id/eallday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="allday" />

        <EditText
            android:id="@+id/estarttime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="starttime" />

        <EditText
            android:id="@+id/eendtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="endtime" />

        <EditText
            android:id="@+id/erepeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="repeat" />

        <EditText
            android:id="@+id/eplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="place" />

        <EditText
            android:id="@+id/enoticetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="noticetime" />

        <EditText
            android:id="@+id/ememo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="memo" />

        <EditText
            android:id="@+id/eweight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="weight" />


    </LinearLayout>

</LinearLayout>